<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainActivity"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.navarrocantero.youtubeRss.MainActivity">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageButton
                android:id="@+id/downloadRss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_alignParentTop="true"
                android:scaleType="centerInside" android:contentDescription="TODO"/>
        <ListView
                android:id="@+id/listViewVideos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/downloadRss" android:layout_marginRight="0dp"
                android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" android:layout_marginLeft="0dp"
                android:layout_alignParentLeft="true" android:visibility="invisible"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
